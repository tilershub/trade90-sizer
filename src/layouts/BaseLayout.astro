---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const ghostKey = import.meta.env.GHOST_CONTENT_API_KEY;
const { title, description = "Professional trading tools and risk management analysis. Optimize your funded trading strategy with the TRADE90 Position Sizer." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | TRADE90</title>
    
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0f172a" />

    <script 
      defer 
      src="https://cdn.jsdelivr.net/ghost/portal@~2.43/main.js" 
      data-ghost="https://trade90.ghost.io" 
      data-api="https://trade90.ghost.io/ghost/api/content/" 
      data-key={ghostKey} 
    ></script>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
