---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const ghostKey = import.meta.env.GHOST_CONTENT_API_KEY;
const { title, description = "Professional trading tools and risk management analysis." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | TRADE90</title>
    <meta name="description" content={description} />

    <script 
      defer 
      src="https://cdn.jsdelivr.net/ghost/portal@~2.43/main.js" 
      data-ghost="https://trade90.ghost.io" 
      data-api="https://trade90.ghost.io/ghost/api/content/" 
      data-key={ghostKey}
    ></script>
    
    <style is:global>
      /* This CSS only affects the Header, leaving the Position Sizer alone */
      [data-members-show="true"] { display: none !important; }
      [data-members-show="false"] { display: flex !important; }

      .gh-portal-authenticated [data-members-show="true"] { display: flex !important; }
      .gh-portal-authenticated [data-members-show="false"] { display: none !important; }

      #ghost-portal-root { z-index: 9999999 !important; }
    </style>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col antialiased">
    <Header />
    <main class="flex-grow w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
