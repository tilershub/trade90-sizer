---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description = "Professional trading tools and risk management analysis." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | TRADE90</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <script 
      defer 
      src="https://cdn.jsdelivr.net/ghost/portal@~2.43/main.js" 
      data-ghost="https://trade90.ghost.io" 
    ></script>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col selection:bg-emerald-500/30">
    <Header />
    <main id="main-content" class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
