---
// 1. Import your Svelte Calculator
import PositionSizer from '../components/PositionSizer.svelte';

// 2. Import the Footer for legal compliance
import Footer from '../components/Footer.astro';

// 3. Import your Ghost Client (the "Handshake" we built)
import { ghostClient } from '../lib/ghost';

// 4. Fetch your 5 latest trading posts from Ghost
const posts = await ghostClient.posts.browse({ 
  limit: 5,
  include: ['tags', 'authors'] 
}).catch((err) => {
  console.error("Ghost Fetch Error:", err);
  return []; // Return empty list if Ghost is down
});
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRADE90 | Professional Position Sizing & Logic</title>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col">
    <header class="py-12 px-4 border-b border-slate-900 bg-black/50">
      <div class="max-w-4xl mx-auto text-center mb-10">
        <h1 class="text-4xl font-black text-green-500 tracking-tighter mb-2 uppercase">
          TRADE90 PROTOCOL
        </h1>
        <p class="text-slate-400 uppercase text-[10px] tracking-[0.3em] font-bold">
          Precision Risk Logic for Funded Traders
        </p>
      </div>
      
      <PositionSizer client:load />
    </header>

    <main class="max-w-4xl mx-auto py-16 px-4 flex-grow">
      <div class="flex items-center justify-between mb-10">
        <h2 class="text-2xl font-bold border-l-4 border-green-500 pl-4 uppercase tracking-tight">
          Latest Analysis
        </h2>
        <a href="/blog" class="text-[10px] font-bold text-green-500 uppercase tracking-widest hover:text-white transition-colors">
          Full Archives â†’
        </a>
      </div>

      <div class="grid gap-12">
        {posts.length > 0 ? posts.map((post) => (
          <article class="group">
            <time class="text-[10px] text-slate-500 font-mono uppercase tracking-widest">
              {new Date(post.published_at).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
            <h3 class="text-2xl font-bold mt-1 group-hover:text-green-400 transition-colors">
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </h3>
            <p class="mt-3 text-slate-400 leading-relaxed line-clamp-2 text-sm">
              {post.excerpt}
            </p>
            <div class="mt-4 flex gap-2">
               {post.tags?.map(tag => (
                 <span class="text-[9px] bg-slate-900 px-2 py-1 rounded text-slate-400 border border-slate-800 uppercase font-semibold">
                   {tag.name}
                 </span>
               ))}
            </div>
          </article>
        )) : (
          <p class="text-slate-500 italic text-sm">No analysis found. Check Ghost API connection.</p>
        )}
      </div>
    </main>

    <Footer />
  </body>
</html>
