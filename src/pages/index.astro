---
import PositionSizer from '../components/PositionSizer.svelte';
import Footer from '../components/Footer.astro';
import { ghostClient } from '../lib/ghost';

const posts = await ghostClient.posts.browse({ 
  limit: 5,
  include: ['tags', 'authors'] 
}).catch((err) => {
  console.error("Ghost Fetch Error:", err);
  return [];
});
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRADE90 | Professional Position Sizing</title>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col">
    
    <nav class="sticky top-0 z-50 bg-black/80 backdrop-blur-md border-b border-slate-900 py-4 px-4">
      <div class="max-w-4xl mx-auto flex items-center justify-center gap-2">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-green-500">
          <path d="M3 17L9 11L13 15L21 7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <h1 class="text-xl font-black text-white tracking-widest uppercase">
          TRADE<span class="text-green-500">90</span>
        </h1>
      </div>
    </nav>

    <section class="py-10 px-4 bg-gradient-to-b from-black to-slate-950 border-b border-slate-900">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
          <p class="text-slate-500 uppercase text-[9px] tracking-[0.4em] font-bold">
            Professional Risk Framework
          </p>
        </div>
        
        <div class="bg-slate-900/40 rounded-xl border border-slate-800 p-2 shadow-2xl">
          <PositionSizer client:load />
        </div>
      </div>
    </section>

    <main class="max-w-4xl mx-auto py-16 px-6 flex-grow w-full">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-lg font-bold border-l-4 border-green-500 pl-4 uppercase tracking-tighter text-slate-200">
          Latest Analysis
        </h2>
        <a href="/blog" class="text-[10px] font-bold text-green-500 uppercase tracking-widest hover:text-white transition-colors">
          Archives â†’
        </a>
      </div>

      <div class="grid gap-16">
        {posts.length > 0 ? posts.map((post) => (
          <article class="group">
            <time class="text-[9px] text-slate-500 font-mono uppercase tracking-widest">
              {new Date(post.published_at).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
            <h3 class="text-xl font-bold mt-2 group-hover:text-green-400 transition-colors leading-tight">
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </h3>
            <p class="mt-3 text-slate-400 leading-relaxed text-sm line-clamp-3">
              {post.excerpt}
            </p>
          </article>
        )) : (
          <p class="text-slate-600 italic text-sm text-center py-10">Fetching veteran insights...</p>
        )}
      </div>
    </main>

    <Footer />
  </body>
</html>
