---
import Header from '../components/Header.astro';
import PositionSizer from '../components/PositionSizer.svelte';
import Footer from '../components/Footer.astro';
import { ghostClient } from '../lib/ghost';

// Fetch posts for the list below the calculator
const posts = await ghostClient.posts.browse({ 
  limit: 5,
  include: ['tags'] 
}).catch(() => []);
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRADE90 | Position Sizing & Strategy</title>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col">
    <Header />

    <main class="flex-grow">
      <section class="py-10 px-4 border-b border-slate-900">
        <div class="max-w-2xl mx-auto">
          <div class="bg-slate-900/40 rounded-xl border border-slate-800 p-2 shadow-2xl">
            <PositionSizer client:load />
          </div>
        </div>
      </section>

      <section class="max-w-4xl mx-auto py-16 px-6">
        <h2 class="text-lg font-bold border-l-4 border-green-500 pl-4 uppercase mb-12">Latest Analysis</h2>
        
        <div class="grid gap-16">
          {posts.map((post) => (
            <article class="group">
              <time class="text-[10px] text-slate-500 font-mono uppercase tracking-widest">
                {new Date(post.published_at).toLocaleDateString()}
              </time>
              <h3 class="text-xl font-bold mt-2 group-hover:text-green-500 transition-colors">
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h3>
              <p class="text-slate-400 text-sm mt-3 line-clamp-2 italic">
                {post.excerpt}
              </p>
            </article>
          ))}
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
