---
import Header from '../components/Header.astro';
import PositionSizer from '../components/PositionSizer.svelte';
import BlogCard from '../components/BlogCard.astro';
import Footer from '../components/Footer.astro';
import { ghostClient } from '../lib/ghost';

// Fetch posts for the grid below the calculator
const posts = await ghostClient.posts.browse({ 
  limit: 6, // Increased to 6 to keep the 2-column grid balanced
  include: ['tags'] 
}).catch((err) => {
  console.error("Ghost Fetch Error:", err);
  return [];
});
---

<!DOCTYPE html>
<html lang="en" class="bg-black text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRADE90 | Position Sizing & Strategy</title>
  </head>
  <body class="min-h-screen bg-slate-950 flex flex-col">
    <Header />

    <main class="flex-grow">
      <section class="py-10 px-4 border-b border-slate-900">
        <div class="max-w-2xl mx-auto">
          <div class="bg-slate-900/40 rounded-xl border border-slate-800 p-2 shadow-2xl">
            <PositionSizer client:load />
          </div>
        </div>
      </section>

      <section class="max-w-5xl mx-auto py-20 px-6">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-xl font-bold border-l-4 border-green-500 pl-4 uppercase tracking-tighter text-slate-200">
            Latest Analysis
          </h2>
          <a href="/blog" class="text-[10px] font-bold text-green-500 uppercase tracking-widest hover:text-white transition-colors">
            View All â†’
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          {posts.length > 0 ? posts.map((post) => (
            <BlogCard 
              title={post.title}
              excerpt={post.excerpt}
              image={post.feature_image}
              slug={post.slug}
              date={post.published_at}
            />
          )) : (
            <p class="text-slate-600 italic text-sm py-10">Syncing with Ghost API...</p>
          )}
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
