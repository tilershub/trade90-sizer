---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contact Us">
  <main class="max-w-3xl mx-auto py-20 px-6 text-center">
    <h1 class="text-4xl font-black text-white uppercase mb-4">Contact</h1>
    <p class="text-slate-400 mb-10">Have questions about the TRADE90 Framework?</p>
    <div class="bg-slate-900 border border-slate-800 p-10 rounded-2xl inline-block">
      <p class="text-slate-500 uppercase text-[10px] tracking-widest mb-2">Professional Inquiries</p>
      <a href="mailto:admin@tradeninety.com" class="text-2xl font-mono text-green-500 hover:text-white transition-colors">
        admin@tradeninety.com
      </a>
    </div>
  </main>
</BaseLayout>
