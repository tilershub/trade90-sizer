---
// This script section defines the "Props" the component expects
interface Props {
  title: string;
  excerpt: string;
  image: string;
  slug: string;
  date: string;
}

const { title, excerpt, image, slug, date } = Astro.props;
---

<article class="group flex flex-col bg-slate-900/20 rounded-2xl overflow-hidden border border-slate-900 hover:border-green-500/30 transition-all duration-300">
  {image && (
    <a href={`/blog/${slug}`} class="block aspect-video overflow-hidden">
      <img 
        src={image} 
        alt={title}
        loading="lazy" 
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
      />
    </a>
  )}

  <div class="p-6">
    <time class="text-[9px] text-green-500 font-mono uppercase tracking-[0.2em]">
      {new Date(date).toLocaleDateString()}
    </time>
    
    <h3 class="text-lg font-bold mt-3 text-white group-hover:text-green-400 transition-colors leading-snug">
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
    
    <p class="mt-3 text-slate-400 text-sm line-clamp-2 leading-relaxed">
      {excerpt}
    </p>

    <div class="mt-6 flex items-center gap-2">
       <span class="w-8 h-[1px] bg-slate-800"></span>
       <span class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Read Analysis</span>
    </div>
  </div>
</article>
