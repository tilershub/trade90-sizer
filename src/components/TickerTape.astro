---
// Lightweight Market Ticker (Zero Performance Impact)
const symbols = [
  { label: "S&P 500", price: "5,812.2", change: "+0.45%" },
  { label: "NASDAQ 100", price: "18,203.4", change: "+0.88%" },
  { label: "EUR/USD", price: "1.0854", change: "-0.12%" },
  { label: "BTC/USD", price: "95,179", change: "+0.07%" },
  { label: "GOLD", price: "2,650.4", change: "+0.33%" },
  { label: "DOW 30", price: "42,352.1", change: "+0.15%" },
];

const doubleSymbols = [...symbols, ...symbols];
---

<div class="ticker-wrap border-b border-white/5 bg-[#0a0a0a]">
  <div class="ticker">
    {doubleSymbols.map((s) => (
      <div class="ticker__item">
        <span class="label text-slate-500">{s.label}</span>
        <span class="price font-mono text-white ml-2">{s.price}</span>
        <span class={`change ml-2 ${s.change.startsWith('+') ? 'text-emerald-500' : 'text-rose-500'}`}>
          {s.change}
        </span>
      </div>
    ))}
  </div>
</div>

<style>
  .ticker-wrap {
    width: 100%;
    overflow: hidden;
    height: 44px; /* Matches your screenshot depth */
    display: flex;
    align-items: center;
  }

  .ticker {
    display: flex;
    white-space: nowrap;
    animation: ticker-move 40s linear infinite;
  }

  .ticker__item {
    display: inline-flex;
    align-items: center;
    padding: 0 2.5rem;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @keyframes ticker-move {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .ticker-wrap:hover .ticker {
    animation-play-state: paused;
  }
</style>
