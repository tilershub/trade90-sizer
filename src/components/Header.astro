<nav class="sticky top-0 z-50 bg-black/90 backdrop-blur-md border-b border-slate-900 py-4 px-4">
  <div class="max-w-4xl mx-auto flex items-center justify-between">
    
    <a href="/" class="flex items-center gap-2 group" aria-label="TRADE90 Home">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-green-500 group-hover:scale-110 transition-transform">
        <path d="M3 17L9 11L13 15L21 7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <h1 class="text-xl font-black text-white tracking-widest uppercase">
        TRADE<span class="text-green-500">90</span>
      </h1>
    </a>

    <button id="menu-btn" class="text-white focus:outline-none p-2 md:hidden" aria-label="Open Navigation Menu">
      <svg id="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <div class="hidden md:flex items-center gap-8">
      <a href="/blog" class="text-[10px] text-slate-300 hover:text-green-500 uppercase font-bold tracking-widest transition-colors">Analysis</a>
      <a href="/about" class="text-[10px] text-slate-300 hover:text-green-500 uppercase font-bold tracking-widest transition-colors">About</a>
      <a href="#/portal/signup" class="bg-green-500/10 border border-green-500/50 text-green-500 px-5 py-2 rounded-full text-[10px] font-bold uppercase tracking-widest hover:bg-green-500 hover:text-black transition-all">
        Member Access
      </a>
    </div>
  </div>

  <div id="mobile-menu" class="hidden flex flex-col items-center gap-6 py-10 bg-black border-b border-slate-900 absolute left-0 w-full shadow-2xl z-40">
    <a href="/" class="text-slate-300 hover:text-green-500 uppercase text-xs font-bold tracking-widest">Home</a>
    <a href="/blog" class="text-slate-300 hover:text-green-500 uppercase text-xs font-bold tracking-widest">Analysis</a>
    <a href="/about" class="text-slate-300 hover:text-green-500 uppercase text-xs font-bold tracking-widest">About</a>
    <a href="/contact" class="text-slate-300 hover:text-green-500 uppercase text-xs font-bold tracking-widest">Contact</a>
    <hr class="w-10 border-slate-800" />
    <a href="#/portal/signup" class="text-green-500 uppercase text-xs font-black tracking-[0.2em]">Join the Framework</a>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');

  // Close menu when clicking a link
  const links = document.querySelectorAll('#mobile-menu a');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  links.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>

<section class="pt-10 pb-2 px-4 bg-gradient-to-b from-black to-slate-950">
  <div class="max-w-2xl mx-auto text-center">
    <p class="text-slate-500 uppercase text-[9px] tracking-[0.4em] font-bold">
      Professional Risk Framework
    </p>
  </div>
</section>
