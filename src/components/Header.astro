<div data-members-show="false" class="flex items-center gap-4">
  <button 
    data-portal="signin" 
    class="text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-white transition-colors cursor-pointer bg-transparent border-none"
  >
    Login
  </button>
  <button 
    data-portal="signup" 
    class="bg-emerald-500 hover:bg-emerald-400 text-black px-5 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest transition-all cursor-pointer border-none"
  >
    Join Now
  </button>
</div>

<div data-members-show="true" class="relative">
  <button id="menu-toggle" class="text-white p-2 hover:bg-slate-900 rounded-lg transition-colors cursor-pointer" aria-label="Member Menu">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu"><line x1="3" x2="21" y1="12" y2="12"></line><line x1="3" x2="21" y1="6" y2="6"></line><line x1="3" x2="21" y1="18" y2="18"></line></svg>
  </button>

  <div id="mobile-menu" class="hidden absolute top-12 right-0 w-48 bg-slate-900 border border-slate-800 shadow-2xl rounded-xl overflow-hidden py-2">
    <button data-portal="account" class="w-full text-left px-4 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-800 hover:text-emerald-500 cursor-pointer">
      My Account
    </button>
    <a href="/blog" class="block px-4 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-800 hover:text-emerald-500">
      Analysis
    </a>
    <button data-members-signout class="w-full text-left px-4 py-3 text-[10px] font-black uppercase text-rose-500 hover:bg-slate-800 cursor-pointer">
      Sign Out
    </button>
  </div>
</div>
