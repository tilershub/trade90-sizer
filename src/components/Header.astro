<script define:vars={{ GHOST_URL }}>
  (function() {
    const s = document.createElement('script');
    s.src = GHOST_URL + '/public/members.min.js';
    s.async = true;
    document.head.appendChild(s);
    
    s.onload = function() {
      if (window.GhostMembers) {
        document.getElementById('ghost-signin')?.addEventListener('click', () => window.GhostMembers.portal.open());
        document.getElementById('ghost-signup')?.addEventListener('click', () => window.GhostMembers.portal.open());
        document.getElementById('ghost-account')?.addEventListener('click', () => window.GhostMembers.portal.open());
        document.getElementById('ghost-signout')?.addEventListener('click', () => window.GhostMembers.signout());
      }
    };
  })();
</script>

<script>
  const btn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', (e) => { e.stopPropagation(); menu?.classList.toggle('hidden'); });
  document.addEventListener('click', () => { menu?.classList.add('hidden'); });
</script>