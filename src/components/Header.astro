---
const GHOST_URL = import.meta.env.PUBLIC_GHOST_URL || "https://your-site.ghost.io";
---

<header class="border-b border-slate-900 bg-black/50 backdrop-blur-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    
    <a href="/" class="text-xl font-black tracking-tighter text-white shrink-0">
      TRADE<span class="text-emerald-500">90</span>
    </a>

    <nav class="hidden md:flex items-center gap-8 text-[10px] font-black uppercase tracking-[0.2em]">
      <a href="/" class="text-slate-400 hover:text-white transition-colors">Calculator</a>
      <a href="/blog" class="text-slate-400 hover:text-white transition-colors">Analysis</a>
    </nav>

    <div class="flex items-center gap-4">
      
      <div data-members-show="false" class="hidden md:flex items-center gap-4">
        <a href="javascript:" data-portal="signin" class="text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-white">
          Login
        </a>
        <a href="javascript:" data-portal="signup" class="bg-emerald-500 text-black px-5 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest">
          Join Now
        </a>
      </div>

      <div class="relative">
        <button id="menu-toggle" class="text-white p-2 hover:bg-slate-900 rounded-lg cursor-pointer bg-transparent border-none">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" x2="21" y1="12" y2="12"></line>
            <line x1="3" x2="21" y1="6" y2="6"></line>
            <line x1="3" x2="21" y1="18" y2="18"></line>
          </svg>
        </button>

        <div id="mobile-menu" class="hidden absolute top-12 right-0 w-56 bg-slate-950 border border-slate-800 shadow-2xl rounded-2xl py-3 z-50 overflow-hidden">
          
          <a href="/" class="block px-6 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-900 hover:text-emerald-500">Calculator</a>
          <a href="/blog" class="block px-6 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-900 hover:text-emerald-500">Analysis</a>
          
          <div class="h-[1px] bg-slate-800 my-2 mx-4"></div>

          <div data-members-show="false">
            <a href="javascript:" data-portal="signin" class="block px-6 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-900">Sign In</a>
            <a href="javascript:" data-portal="signup" class="block px-6 py-3 text-[10px] font-black uppercase text-emerald-500 hover:bg-slate-900">Create Account</a>
          </div>

          <div data-members-show="true">
            <a href="javascript:" data-portal="account" class="block px-6 py-3 text-[10px] font-black uppercase text-slate-300 hover:bg-slate-900">My Account</a>
            <a href="javascript:" data-members-signout class="block px-6 py-3 text-[10px] font-black uppercase text-rose-500 hover:bg-slate-900">Sign Out</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</header>

<script defer src={`${GHOST_URL}/public/members.min.js`}></script>

<script>
  // Simple Menu Toggle Logic
  const btn = document.getElementById("menu-toggle");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", (e) => {
    e.stopPropagation();
    menu?.classList.toggle("hidden");
  });

  // Close menu when clicking outside
  document.addEventListener("click", () => {
    menu?.classList.add("hidden");
  });
</script>
